generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Square {
  id           Int      @id
  title        String
  imageUrl     String
  redirectLink String
  owner        String
  isPurchased  Boolean  @default(false)
  timestamp    DateTime @default(now())
}

